<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewBeacons"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"

        android:text="Beacons will be here" />

    <TextView
        android:id="@+id/textViewPosition"
        android:layout_below="@+id/textViewBeacons"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position will be here" />

    <TextView
        android:id="@+id/textViewAzimuth"
        android:layout_below="@+id/textViewPosition"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="80dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azimuth will be here" />

</RelativeLayout>